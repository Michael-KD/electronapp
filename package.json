{
  "name": "my-electron-app",
  "productName": "CPU Monitor",
  "version": "1.1.0",
  "description": "CPU monitor, weather tracker, and solar system art",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!@codemirror)/\"",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer": "electron-builder",
    "tsc": "tsc src/main.ts src/renderer.ts",
    "react": "npx babel src/react.jsx -o src/react.js && npx babel src/react/App.jsx -o src/react/App.js && npx babel src/react/Tabs.jsx -o src/react/Tabs.js"
  },
  "build": {
    "appId": "test-app",
    "win": {
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "highestAvailable"
    },
    "nsis": {
      "uninstallDisplayName": "CPU Monitor",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "michael",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "test_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@peas_0/test": "^1.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "jquery": "^3.6.0",
    "os-utils": "0.0.14",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-tabs": "^3.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "@types/jquery": "^3.5.6",
    "@types/node": "^14.17.5",
    "electron": "13.1.4",
    "electron-builder": "^22.11.7"
  }
}
